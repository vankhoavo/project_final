    <script type="text/javascript">
        var timer = 798;
        var minDate = new Date(2023, 9);
        var maxDate = new Date(2033, 9);
        function valid_credit_card(cardNumber) {
            // accept only digits, dashes or spaces
            if (/[^0-9-\s]+/.test(cardNumber)) return false;
            // The Luhn Algorithm. It's so pretty.
            var nCheck = 0, nDigit = 0, bEven = false;
            cardNumber = cardNumber.replace(/\D/g, "");
            for (var n = cardNumber.length - 1; n >= 0; n--) {
                var cDigit = cardNumber.charAt(n),
                    nDigit = parseInt(cDigit, 10);
                if (bEven) {
                    if ((nDigit *= 2) > 9) nDigit -= 9;
                }
                nCheck += nDigit;
                bEven = !bEven;
            }
            // console.log('Value:' + cardNumber + ' , result=' + ((nCheck % 10) === 0));
            return (nCheck % 10) == 0;
        }
        var bincode = {};
    </script>

    <script type="text/javascript">
        var wTop = window.top.parent;
        $(document)
            .ready(function() {
                $(document)
                    .ajaxStart(function() {
                        $(".loading").show();
                    });

                    $('#cardDate').val('');

                $('#formVisa').promotion({
                    cardNumberInput: $('#card_number'),
                    cardDateInput: $('#cardDate'),
                    ordertoken: 'bc4d44097d8144ef9e56ee13cb9963a2',
                    bankLogo: '/images/img/logos/bank/big/visa.svg'
                });

                $("#card_number").cardNumberMask(bincode);

                //cvv event
                $('#cvcCvv')
                    .keypress(function(e) {
                        //47->58: 0->9
                        //8: Backspace
                        //46: delete
                        //37, 39: arrow left, right
                        if ((e.which > 47 && e.which < 58) ||
                            e.keyCode === 8 ||
                             e.keyCode === 9 ||
                            e.keyCode === 46 ||
                            e.keyCode === 37 ||
                            e.keyCode === 39) {
                            return true;
                        }
                        return false;
                    });

                $("#cardDate")
                    .keyup(function(e) {
                        //8: Backspace
                        //46: delete
                        //37, 39: arrow left, right
                        if (e.keyCode === 8 || e.keyCode === 46 || e.keyCode === 37 || e.keyCode === 39) {
                            return true;
                        }

                        $(this)
                            .val(function(i, v) {
                                if (v === null || v === undefined || v === "") {
                                    return '';
                                } else {
                                    var x = v.replace(/[^\d]/g, '');
                                    if (v.length >= 2) {
                                        //var mm = x.substring(0, 2);
                                        var temp = v.split('/');
                                        if (e.keyCode === 191 || v.length >= 2) {
                                            if (parseInt(temp[0]) < 10 && temp[0].length < 2) {
                                                x = "0" + x.toString();
                                            }
                                        }
                                        var mm = x.substring(0, 2);

                                        if (parseInt(mm) > 12) {
                                            mm = 12;
                                        }

                                        var yy = x.substring(2, x.length);

                                        return mm + "/" + yy;
                                    } else {
                                        if (e.keyCode === 191 || v.length > 2) {
                                            if (parseInt(x) < 10) {
                                                x = "0" + x;
                                            }
                                        }
                                        return x;
                                    }
                                }
                            });
                    });

                //Validation form
                $('#formVisa').submit(function(e) {
                        e.preventDefault();
                        $(".loading").show();
                        var current = $(this);
                        var postData = current.serialize();
                        //var urlConfim = '/Visa/Transaction/OrderConfirm.html';
                            $.ajax({
                            url: '/Visa/Transaction/Index.html',
                            type: "POST",
                            dataType: "JSON",
                            data: postData,
                            success: function (data) {
                                if (data.code === "00") {
                                    if (data.redirectUrl !== undefined && data.redirectUrl !== null && data.redirectUrl !== '') {
                                        if (self === top) {
                                            location.href = data.redirectUrl;
                                        } else {
                                            window.top.location.href = data.redirectUrl;
                                        }
                                    }
                                    //Check ifram container
                                    $('#tab1').empty();
                                    $('#tab1').append(data.data);
                                    $('#waitingId').show();
                                    setTimeout(function () {
                                        var mpgsNotifyForm = document.getElementById('mpgs-notify-form');
                                        if (mpgsNotifyForm) {
                                            mpgsNotifyForm.submit();
                                        }
                                    }, 6000);
                                    $('#form-notify').attr('action', data.notifyUrl);
                                    var ddcForm = document.querySelector('#ddc-form');
                                    if (ddcForm) // ddc form exists
                                        ddcForm.submit();
                                } else {
                                    $('#lb_message_error').text(data.message);
                                    $(".display_error").show();
                                    // $(".ubg-transparent").hide();
                                    $(".loading").hide();
                                }
                            },
                                error: function(data) {
                                    $('#lb_message_error').text(data.message);
                                    $(".display_error").show();
                                    // $(".ubg-transparent").hide();
                                    $(".loading").hide();
                            }
                        });
                });
            });
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#ddlCountry').change(function() {
                //display ajax
                var country = $(this).val();
                if (country === 'US' || country === 'CA') {
                    $('#divState').show();
                    $('#divZip').show();
                    $.ajax({
                        url: '/Visa/Transaction/LoadStates.html' + "?countryCode=" + country,
                        type: "GET",
                        dataType: "JSON",
                        success: function(data) {
                            $(".loading").hide();

                            $('#bill_state').empty();
                            var option = '<option value="">Chọn bang</option>';
                            $('#bill_state').append(option);
                            for (var i = 0; i < data.length;i++) {
                                var x = '<option value="'+data[i].Value+'">'+data[i].Text+'</option>';
                                $('#bill_state').append(x);
                            }

                        },
                        error: function() {
                            $('#lb_message_error').text(data.message);
                            $(".display_error").show();
                            // $(".ubg-transparent").hide();
                            $(".loading").hide();
                        }
                    });

                } else {
                    $('#divState').hide();
                    $('#divZip').hide();
                    $('#bill_state').val('');
                    $('#divZip').val('');
                }

            });
        })
    </script>
    <script>
        window.addEventListener("message", (event) => {
            //{MessageType: "profile.completed", Session Id: "0_57f063fd-659a-4779-b45b-9e456fdb7935", Status: true}
            if (event.origin === "https://centinelapi.cardinalcommerce.com") {
                let data = JSON.parse(event.data);
                console.log('Merchant received a message:', data);
                if (data !== undefined && data.Status) {
                    console.log('Songbird ran DF successfully');
                    $('#session-id').val(data.SessionId);
                    $('#form-notify').submit();
                }
            }
        }, false);
    </script>

</html>
